//@version=4
study(title="Multiple Exponential Moving Averages", shorttitle="MEMA", overlay=true)

len = input(7, minval=1, title="Length")
src = input(close, title="Source")
out = ema(src, len)
plot(out, color=#00FFFF, transp=0, linewidth=1, title="EMA(7)")

